<?xml version="1.0" encoding="utf-8"?>
<!--Bkav QuangNDb layout custom action bar cua BtalkCOnversationFragment-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_title_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal" >

    <TextView
        android:id="@+id/conversation_title"
        style="@style/ConversationActionBarTitleTextStyle"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color_action_bar_conversation"
        android:textSize="@dimen/conversation_fragment_action_bar_text_size"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="@string/search_sms_hint">
    </SearchView>
</RelativeLayout>