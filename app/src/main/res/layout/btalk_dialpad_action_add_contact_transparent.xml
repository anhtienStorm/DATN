<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/delete_number_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <bkav.android.btalk.fragments.dialpad.BtalkDialpadLetterTextViewBlur
        style="@style/BtalkLetterSmsDialpadActionSmsStyle"
        android:fontFamily="sans-serif-light"
        android:textSize="8sp"
        app:blur_padding_bottom="@dimen/btalk_message_padding_bottom"/>

    <ImageView
        android:foregroundGravity="center"
        android:layout_width="@dimen/layout_width_image_button_delete"
        android:layout_height="@dimen/layout_height_image_button_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_23dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete_number_new"
        android:tint="@color/color_button_message_and_button_delete"/>

</RelativeLayout>
