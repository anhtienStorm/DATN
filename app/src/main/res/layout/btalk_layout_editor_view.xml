<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="@dimen/large_margin"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/kind_icon"
        style="@style/BtalkEditKindIconStyle"/>

   <!-- HienDTk: fix loi khong moi duoc bo nho da phuong tien khi click vao nhac chuong/am bao   -->
    <LinearLayout
        android:id="@+id/container_editor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/background_underline">

        <TextView
            android:id="@+id/label_editor_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/editor_form_text_size"/>

        <LinearLayout
            android:id="@+id/container_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btalk_editor_min_line_item_height"
            android:background="@drawable/icon_dropdown"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingEnd="46dp">
            <TextView
                android:id="@+id/content_action"
                android:layout_gravity="end|center_vertical"
                android:gravity="end"
                android:maxLines="1"
                android:layout_width="@dimen/width_spinner"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/editor_form_text_size"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>